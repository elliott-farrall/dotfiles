{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["group:allNonMajor"],

  "enabledManagers": ["docker-compose", "github-actions", "nix"],
  "nix": {
    "enabled": true
  },

  "lockFileMaintenance": {
    "enabled": true
  },

  "postUpgradeTasks": {
    "commands": [
      "nix run github:fzakaria/nix-auto-follow -- -i",
      "systems/*/*/**/compose.sh",
      "nix fmt"
    ],
    "executionMode": "branch"
  }
}
