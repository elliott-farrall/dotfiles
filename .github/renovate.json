{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    "group:allNonMajor",
    "group:allDigest",
    ":automergeAll"
  ],

  "enabledManagers": ["github-actions", "docker-compose", "nix"],
  "nix": { "enabled": true },

  "labels": ["automated", "dependencies", "{{ updateType }}"],

  "packageRules": [
    {
      "description": "github actions",
      "matchManagers": ["github-actions"],
      "addLabels": ["patch"]
    },
    {
      "description": "docker images",
      "matchManagers": ["docker-compose"],
      "addLabels": ["patch"],
      "postUpgradeTasks": {
        "commands": ["systems/*/*/**/compose.sh"],
        "executionMode": "branch"
      }
    },
    {
      "description": "flake inputs",
      "matchManagers": ["nix"],
      "addLabels": ["patch"],
      "postUpgradeTasks": {
        "commands": [
          "nix run github:fzakaria/nix-auto-follow -- -i",
          "nix flake lock"
        ],
        "executionMode": "branch"
      }
    },
    {
      "description": "ignore flakehub dependencies",
      "matchManagers": ["nix"],
      "matchPackageNames": ["https://flakehub.com/f/**"],
      "enabled": false
    },
    {
      "description": "seperate core flake inputs",
      "matchManagers": ["nix"],
      "matchDepNames": ["nixpkgs", "home-manager"],
      "addLabels": ["minor"],
      "groupName": "Core Flake Inputs",
      "automerge": false
    }
  ],

  "postUpgradeTasks": {
    "commands": ["nix fmt"],
    "executionMode": "branch"
  },

  "pruneStaleBranches": false,
  "pruneBranchAfterAutomerge": false
}
